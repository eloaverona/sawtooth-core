set -e

top_dir=$(cd $(dirname $(dirname $0)) && pwd)

echo -e "\033[0;32m--- Building block-info-tp ---\n\033[0m"
rm -rf $top_dir/families/block_info/sawtooth_block_info/bin/
mkdir -p $top_dir/families/block_info/sawtooth_block_info/bin/
cd $top_dir/families/block_info/sawtooth_block_info/
cargo build --release && cp ./target/release/block_info $top_dir/families/block_info/sawtooth_block_info/bin/block_info
